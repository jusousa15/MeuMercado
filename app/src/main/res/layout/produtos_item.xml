<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:background="@android:color/white"
    android:layout_margin="10dp"
    android:id="@+id/recyclerView_produtos"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:ignore="MissingConstraints">

<ImageView
    android:id="@+id/fotoProduto"
    android:layout_width="120dp"
    android:layout_height="120dp"
    android:src="@drawable/item_arroz1"
    android:layout_margin="10dp"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/nomeProduto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Arroz Zilmar"
        android:textSize="20sp"
        android:textColor="@android:color/holo_red_dark"
        android:textStyle="bold"
        android:layout_marginStart="140dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintStart_toEndOf="@id/fotoProduto"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

<TextView
    android:id="@+id/descriçãoProduto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Arroz Zilmar Parbolizado"
    android:textSize="16dp"
    android:layout_marginStart="140dp"
    android:layout_marginEnd="10dp"
    android:layout_marginTop="10dp"
    android:maxLines="4"
    app:layout_constraintTop_toBottomOf="@+id/nomeProduto"
    app:layout_constraintStart_toEndOf="@+id/fotoProduto"
    app:layout_constraintEnd_toEndOf="parent"
    />
<TextView
    android:id="@+id/precoProduto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="R$5,20"
    android:textStyle="bold"
    android:textSize="18sp"
    android:textColor="@android:color/holo_green_dark"
    android:layout_marginStart="10dp"
    android:layout_marginTop="10dp"
    app:layout_constraintTop_toBottomOf="@id/descriçãoProduto"
    app:layout_constraintStart_toEndOf="@id/fotoProduto"

    />

</androidx.constraintlayout.widget.ConstraintLayout>
